{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/index",
      "destination": "/index.html"
    },
    {
      "source": "/tips",
      "destination": "/tips.html"
    },
    {
      "source": "/tips/:slug",
      "destination": "/post.html?slug=:slug"
    },
    {
      "source": "/:slug",
      "destination": "/post.html?slug=:slug"
    },
    {
      "source": "/profile/:username",
      "destination": "/profile.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=3600, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
